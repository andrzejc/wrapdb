{
  "libxmlpp": {
    "debian_packages": [
      "libglibmm-2.4-dev"
    ]
  },
  "rdkafka": {
    "build_options": [
      "rdkafka:WITH_SASL=disabled",
      "rdkafka:WITH_ZSTD=disabled"
    ]
  },
  "sfml": {
    "debian_packages": [
      "libgl-dev",
      "libopenal-dev",
      "libudev-dev",
      "libxrandr-dev"
    ]
  },
  "spng": {
    "build_options": [
      "force_fallback_for=zlib"
    ]
  },
  "cmph": {
    "build_options": [
      "cmph:build_tests=true",
      "cmph:build_cxxmph=true",
      "cmph:default_library=both"
    ]
  }
}
